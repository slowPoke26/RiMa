<h1>Listing risks</h1>

<%= form_tag(risks_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :class => "btn", :name => nil %>
</p>
<% end %>

<%= render :partial => "table", :locals => { :risks => @risks } %>

<br />

<a class="btn btn-large btn-info" href=<%= new_risk_path %>>New Risk</a>
